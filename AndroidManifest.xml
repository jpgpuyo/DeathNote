<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jpuyo.deathnote"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name="com.jpuyo.deathnote.application.MyApplication"
        android:logo="@drawable/ic_notebook"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBarTheme" >
        <activity
            android:name="com.jpuyo.deathnote.activities.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jpuyo.deathnote.activities.main.GameActivity" />
        <activity android:name="com.jpuyo.deathnote.activities.playerinfo.PlayerInfoActivity"
            	  android:theme="@style/ActionBarTheme"/>
        <activity android:name="com.jpuyo.deathnote.activities.playerinfo.investigations.edit.EditInvestigationActivity"/> 
    </application>

</manifest>